---
/**
 * Base Layout für PSM Statistik Dashboard
 * Verwendet Design-Tokens aus dem Haupt-PSM-Projekt
 */
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Statistik-Dashboard für Pflanzenschutzmittel-Daten' } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/psm-statistik/favicon.svg" />
    <title>{title} | PSM Statistik</title>
  </head>
  <body>
    <header class="header">
      <div class="header-content">
        <a href="/psm-statistik/" class="logo">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 3v18h18" />
            <path d="M18 9l-5 5-4-4-3 3" />
          </svg>
          <span>PSM Statistik</span>
        </a>
        <nav class="nav">
          <a href="/psm-statistik/">Übersicht</a>
          <a href="/psm-statistik/wirkstoffe/">Wirkstoffe</a>
          <a href="/psm-statistik/kulturen/">Kulturen</a>
          <a href="/psm-statistik/timeline/">Timeline</a>
        </nav>
        <a href="https://digitale-psm.de" class="back-link" target="_blank">
          ← Zurück zur App
        </a>
      </div>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <p>
        Daten: <a href="https://www.bvl.bund.de" target="_blank">Bundesamt für Verbraucherschutz (BVL)</a>
        · Aktualisierung alle 2 Tage
        · <a href="https://github.com/Abbas-Hoseiny/psm-statistik" target="_blank">GitHub</a>
      </p>
    </footer>
  </body>
</html>

<style is:global>
  /**
   * PSM Statistik Theme
   * Abgeleitet vom Haupt-PSM Design System
   */
  :root {
    /* ═══ Hintergrund ═══ */
    --bg-0: #0b1620;
    --bg-1: #0e1d2a;
    --surface-1: #122433;
    --surface-2: #162c3e;
    --surface-3: #1b3448;

    /* ═══ Text ═══ */
    --text: #e6f0f6;
    --text-muted: #a6b5c2;
    --text-dim: #7e93a4;

    /* ═══ Rahmen ═══ */
    --border-1: #2a3f52;
    --border-2: #36536b;

    /* ═══ Primärfarbe (Grün) ═══ */
    --primary: #22c55e;
    --primary-hover: #16a34a;
    --primary-subtle: rgba(34, 197, 94, 0.18);

    /* ═══ Diagramm-Farben ═══ */
    --chart-1: #22c55e;  /* Grün */
    --chart-2: #22d3ee;  /* Cyan */
    --chart-3: #fbbf24;  /* Amber */
    --chart-4: #ef4444;  /* Rot */
    --chart-5: #8b5cf6;  /* Violett */
    --chart-6: #f472b6;  /* Pink */
    --chart-7: #64748b;  /* Slate */
    --chart-8: #06b6d4;  /* Teal */

    /* ═══ Radien ═══ */
    --r-sm: 4px;
    --r-md: 8px;
    --r-lg: 12px;

    /* ═══ Schatten ═══ */
    --shadow-1: 0 8px 24px rgba(0, 0, 0, 0.35);
    --shadow-2: 0 14px 40px rgba(0, 0, 0, 0.45);

    /* ═══ Spacing ═══ */
    --sp-1: 0.25rem;
    --sp-2: 0.5rem;
    --sp-3: 0.75rem;
    --sp-4: 1rem;
    --sp-6: 1.5rem;
    --sp-8: 2rem;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html, body {
    min-height: 100vh;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: radial-gradient(ellipse 120% 80% at 50% -10%, #1e3a5f 0%, #081019 60%);
    background-color: var(--bg-0);
    color: var(--text);
    line-height: 1.5;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover {
    color: var(--primary);
  }
</style>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--surface-1);
    border-bottom: 1px solid var(--border-1);
    backdrop-filter: blur(8px);
  }

  .header-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--sp-3) var(--sp-6);
    display: flex;
    align-items: center;
    gap: var(--sp-6);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--sp-2);
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--primary);
  }

  .logo:hover {
    color: var(--primary-hover);
  }

  .nav {
    display: flex;
    gap: var(--sp-4);
    flex: 1;
  }

  .nav a {
    padding: var(--sp-2) var(--sp-3);
    border-radius: var(--r-md);
    color: var(--text-muted);
    font-size: 0.9rem;
    transition: all 0.2s;
  }

  .nav a:hover {
    background: var(--primary-subtle);
    color: var(--primary);
  }

  .back-link {
    color: var(--text-dim);
    font-size: 0.85rem;
  }

  .main {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--sp-6);
    min-height: calc(100vh - 140px);
  }

  .footer {
    border-top: 1px solid var(--border-1);
    padding: var(--sp-4) var(--sp-6);
    text-align: center;
    color: var(--text-dim);
    font-size: 0.8rem;
  }

  .footer a {
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .header-content {
      flex-wrap: wrap;
    }
    
    .nav {
      order: 3;
      width: 100%;
      overflow-x: auto;
    }

    .back-link {
      margin-left: auto;
    }
  }
</style>
