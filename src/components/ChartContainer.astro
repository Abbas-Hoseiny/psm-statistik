---
/**
 * Chart Container Komponente
 * Wrapper f√ºr ECharts mit Loading-State
 */
interface Props {
  id: string;
  title?: string;
  height?: string;
  class?: string;
}

const { id, title, height = '400px', class: className = '' } = Astro.props;
---

<div class={`chart-container ${className}`}>
  {title && <h3 class="chart-title">{title}</h3>}
  <div class="chart-wrapper">
    <div id={id} class="chart" style={`height: ${height};`}></div>
    <div class="chart-loading" id={`${id}-loading`}>
      <div class="spinner"></div>
      <span>Daten werden geladen...</span>
    </div>
  </div>
</div>

<style>
  .chart-container {
    background: var(--surface-1);
    border: 1px solid var(--border-1);
    border-radius: var(--r-lg);
    padding: var(--sp-4);
  }

  .chart-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 var(--sp-3) 0;
    padding-bottom: var(--sp-2);
    border-bottom: 1px solid var(--border-1);
  }

  .chart-wrapper {
    position: relative;
  }

  .chart {
    width: 100%;
  }

  .chart-loading {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--sp-3);
    background: var(--surface-1);
    color: var(--text-muted);
    font-size: 0.9rem;
    transition: opacity 0.3s;
  }

  .chart-loading.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .spinner {
    width: 32px;
    height: 32px;
    border: 3px solid var(--border-1);
    border-top-color: var(--primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }
</style>
